<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Properties>
        <Property name="filename">${sys:user.home}/.pubtrends/logs/loader.log</Property>
    </Properties>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{DATE} [%t] %-15C{1} %-5level %msg%n"/>
        </Console>

        <File name="FILE" fileName="${filename}" append="false">
            <PatternLayout pattern="%d{DATE} [%t] %-15C{1} %-5level %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>

</Configuration>