#################################################################
# PubTrends Flask configuration (.env example)
# Copy to .env and adjust values for local development
#################################################################

# Environment: development | testing | production
APP_ENV=development

# Flask
SECRET_KEY=change-me-please

# Admin service SQLite database filename (stored under /database or ~/.pubtrends/database)
DATABASE_FILE=db.sqlite

# SQLAlchemy
SQLALCHEMY_ECHO=0
SQLALCHEMY_TRACK_MODIFICATIONS=0

# Flask-Security
SECURITY_URL_PREFIX=/admin
SECURITY_PASSWORD_HASH=pbkdf2_sha512
# IMPORTANT: set your own salt in real deployments
SECURITY_PASSWORD_SALT=please-change-this-salt

# Flask-Security URLs
SECURITY_LOGIN_URL=/login/
SECURITY_LOGOUT_URL=/logout/
SECURITY_POST_LOGIN_VIEW=/admin/
SECURITY_POST_LOGOUT_VIEW=/

# Registration features (disabled by default)
SECURITY_REGISTERABLE=0
SECURITY_SEND_REGISTER_EMAIL=0
